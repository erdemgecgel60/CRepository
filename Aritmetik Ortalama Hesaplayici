#include <stdio.h>
#include <math.h>
int main()
{

    char yesorno;
    int sayi;
    float toplam = 0;
    int sayilar;
     printf("Basla : ");

     scanf(" %c",&yesorno);

     while(yesorno == 'Y')
     {

        printf("Sayi : ");

        scanf("%d",&sayi);

        sayilar++;

        toplam += sayi;

        printf("Devam Etmek Istiyor Musunuz : ");

        scanf(" %c",&yesorno);

     }  

     printf("Aritmetik Ortalamasi : %.1f",(toplam / sayilar));
    


 
}
